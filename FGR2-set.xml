<PropertyList>

 <sim>

  <description>McDonnell FGR.2 Phantom II</description>
  <author>Dave Culp, Alpha Simulations</author>
  <status>alpha v0.8</status>

  <flight-model>jsb</flight-model>
  <aero>FGR2-jsbsim</aero>

  <startup>
   <splash-texture>Aircraft/FGR2/FGR2-splash.png</splash-texture>
  </startup>

  <gui>
   <style>
    <colors>
     <splash-screen>
      <red>0</red>
      <green>0.05</green>
      <blue>0</blue>
     </splash-screen>
     <splash-font>
      <red>0.31</red>
      <blue>0.19</blue>
      <green>0.4</green>
     </splash-font>
    </colors>
   </style>
  </gui>


  <sound>
   <path>Aircraft/FGR2/Sounds/F4D-sound1.xml</path>
  </sound>

  <submodels> 
    <serviceable type="bool">true</serviceable>
    <path>Aircraft/FGR2/submodels.xml</path>
	
  </submodels>
  
  <systems>
      
      <autopilot>
        <path>Aircraft/FGR2/Systems/autopilot5.xml</path>
      </autopilot>
  <refuel>
  <type>boom</type>
  <serviceable type="bool">true</serviceable>
 </refuel>
    
    </systems>

  <virtual-cockpit archive="y">true</virtual-cockpit>

  <panel>
    <visibility>false</visibility>
  </panel>

  <model>
   <path>Aircraft/FGR2/Models/FGR2.xml</path>
  </model>
  
  <hud>
   <path n="1">Aircraft/FGR2/Hud/hud.xml</path>
   <visibility n="1">true</visibility>
   <palette>
    <color n="0">
     <alpha type="float">0.85</alpha>
     <antialiased type="bool">true</antialiased>
     <brightness type="float">0.85</brightness>
     <transparent type="bool">true</transparent>
     <red type="float">0.38</red>
     <green type="float">1.0</green>
     <blue type="float">0.22</blue>
    </color>
    <color n="1">
     <alpha type="float">0.85</alpha>
     <antialiased type="bool">true</antialiased>
     <brightness type="float">0.85</brightness>
     <transparent type="bool">true</transparent>
     <red type="float">1.0</red>
     <green type="float">0.2</green>
     <blue type="float">0.0</blue>
    </color>
   </palette>
   <clipping>
            <left type="double">-85</left>
            <right type="double">55</right>
            <top type="double">25</top>
            <bottom type="double">-120</bottom>
         </clipping>
  </hud>

  <flaps>
   <setting>0.000</setting>
   <setting>0.500</setting>
   <setting>1.000</setting>
  </flaps>

  <view n="0">
   <internal archive="y">true</internal>
   <config>
    <pitch-offset-deg>-5.4</pitch-offset-deg>
    <x-offset-m archive="y">0</x-offset-m>
    <y-offset-m archive="y">1.42</y-offset-m>
    <z-offset-m archive="y">-5.5</z-offset-m>
   </config>
  </view>
  
   
  <view n="101">
    <name>Pilot cam</name>
        <internal archive="y">false</internal>
        <config>
		 <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
         <x-offset-m archive="y">0</x-offset-m>
    <y-offset-m archive="y">1.42</y-offset-m>
    <z-offset-m archive="y">-5.95</z-offset-m>
          <pitch-offset-deg>0</pitch-offset-deg>
		  <heading-offset-deg>180</heading-offset-deg>
          <default-field-of-view-deg>95</default-field-of-view-deg>
        </config>
     
  </view>

<!-- GIB View
    <pitch-offset-deg>-3.0</pitch-offset-deg>
    <x-offset-m archive="y">0</x-offset-m>
    <y-offset-m archive="y">1.64</y-offset-m>
    <z-offset-m archive="y">-4.23</z-offset-m>
-->

  <help>
   <title>FGR2 Phantom II</title>
   <key>
    <name>c (lower case c) </name>
    <desc>Toggle canopy</desc>
   </key>
   <key>
    <name>n (lower case n) </name>
    <desc>Toggle tailhook</desc>
   </key>
   <key>
    <name>f (lower case f) </name>
    <desc>Toggle refueling system</desc>
   </key>
   <key>
    <name>m (lower case m) </name>
    <desc>Nose wheel steering (hold down)</desc>
   </key>
   <key>
    <name>Shift-Q</name>
    <desc>Toggle fuel cutoff switch</desc>
   </key>
   <key>
    <name>e (lower case e)</name>
    <desc>Release selected stores</desc>
   </key>
   <line> </line>
   <line>Takeoff: full flaps, rotate at 160 kts.</line>
   <line>Climb  : 400 kts. / 0.85 mach</line>
   <line>Cruise : 0.90 mach</line> 
   <line>Landing: full flaps, land at 135 kts. + 3 kts. per 1000 lbs fuel.</line>
   <line> </line>
   <line>Half flaps limit: 280 knots. </line>
   <line>Gear limit: 260 knots. </line>
   <line>Full Flap limit: 200 knots.</line>
   <line>G limit (operational): 7.3</line>
   <line>G limit (structural): 9.0</line>
   <line>NOTE: If you exceed 9.0 you will crash</line>
   <line> </line>
   <line>Clickable panel.  Hit Ctrl-C to see hot spots.</line>
  </help>

  <rendering>
    <redout>
      <parameters>
        <blackout-onset-g>4.0</blackout-onset-g>
        <blackout-complete-g>8.0</blackout-complete-g>
      </parameters> 
    </redout>
  </rendering>

 <multiplay>
      <chat_display>1</chat_display>
      <generic> 
         <!--><int n="0" alias="/sim/crashed" /><-->
		 
		  
        <!-- Nav lights on -->
      <int n="0" alias="/controls/lighting/whiteSwitch" />
	   <int n="0" alias="/controls/lighting/navSwitch" />
      <!-- Beacon on -->
      <int n="1" alias="/controls/lighting/beaconSwitch" />
	   <!-- Strobe on -->
      <int n="1" alias="/controls/lighting/strobeSwitch" />
      <!-- Landing lights on -->
      <int n="2" alias="/controls/lighting/landingSwitch" />
	    <!-- Taxi light on -->
      <int n="3" alias="/controls/lighting/taxiSwitch" />
	  
	  <!-- Engine Status -->
	  
	  <int n="5" alias="/engines/engine[0]/state" />
	  <int n="6" alias="/engines/engine[1]/state" />
	  <int n="7" alias="/sim/crashed" />
	  
        
        <float n="0" alias="/surface-positions/left-taileron-pos-norm"/>
        <float n="1" alias="/surface-positions/right-taileron-pos-norm"/>
		<float n="2" alias="/surface-positions/left-flap-pos-norm"/>
		<float n="3" alias="/surface-positions/right-flap-pos-norm"/>
		<float n="4" alias="/sim/model/nozzle-animation"/>
		<float n="8" alias="/engines/engine[0]/afterburner" /> <!-- Reheat Left Engine -->
	    <float n="9" alias="/engines/engine[1]/afterburner" /> <!-- Reheat Right Engine -->
			
      </generic>
    </multiplay>

<menubar include="Dialogs/menu.xml"/>


<ai>
      <scenario>
	   <path>Aircraft/FGR2/AI/EGOD_arrestor_cables.xml</path>
	  </scenario>
	  <scenario>refueling_demo</scenario>
    </ai>

 </sim>

 <controls>
  <flight>
   <elevator-trim>-0.05</elevator-trim>
  </flight>
  <lighting>
   <instruments-norm>0.3</instruments-norm>
   <formation-norm type="double">1.0</formation-norm>
   <landing type="double">1</landing>
  </lighting>
  <armament>
   <gunsight>
    <power-on type="bool">false</power-on>
    <intensity type="double">0.3</intensity>
   </gunsight>
    <station n="0">
				<release type="bool">false</release>
			</station>
			<station n="1">
				<release type="bool">false</release>
			</station>
			<station n="2">
				<release type="bool">false</release>
			</station>
			<station n="3">
				<release type="bool">false</release>
			</station>
			<station n="4">
				<release type="bool">false</release>
			</station>
			<station n="5">
				<release type="bool">false</release>
			</station>
			<station n="6">
				<release type="bool">false</release>
			</station>
			<station n="7">
				<release type="bool">false</release>
			</station>
			<station n="8">
				<release type="bool">false</release>
			</station>
   
  </armament>
  <gear>
    <brake-parking type="double">1.0</brake-parking>
  </gear>
 </controls>

 <input>
   <keyboard>

    <key n="99">
     <name>c</name>
     <desc>toggle canopy</desc>
     <binding>
       <command>property-toggle</command>
       <property>fdm/jsbsim/systems/canopy/command</property>
     </binding>
    </key>

   <key n="100">
     <name>d</name>
     <desc>Deploy braking chute</desc>
     <binding>
      <condition>
       <equals>
         <property>controls/flight/chute_jettisoned</property>
         <value>0</value>
       </equals>
      </condition>
      <command>property-assign</command>
      <property>fdm/jsbsim/systems/chute/deploy</property>
      <value type="int">1</value>
     </binding>
    </key>

    <key n="106">
      <name>j</name>
      <desc>jettison braking chute</desc>
      <binding>
       <command>property-assign</command>
       <property>fdm/jsbsim/systems/chute/deploy</property>
       <value type="int">0</value>
      </binding>
      <binding>
       <command>property-assign</command>
       <property>controls/flight/chute_jettisoned</property>
       <value type="int">1</value>
      </binding>
    </key>

    <key n="81">
     <name>Shift-Q</name>
     <desc>Fuel Cutoff Switch or Lever.</desc>
     <binding>
      <condition>
       <property>/sim/input/selected/engine[0]</property>
      </condition>
      <command>property-toggle</command>
      <property>/controls/engines/engine[0]/cutoff</property>
     </binding>
     <binding>
      <condition>
       <property>/sim/input/selected/engine[1]</property>
      </condition>
      <command>property-toggle</command>
      <property>/controls/engines/engine[1]/cutoff</property>
     </binding>
    </key>

    <key n="102">
      <name>f</name>
      <desc>Toggle refueling system.</desc>
      <binding>
       <command>property-toggle</command>
       <property>fdm/jsbsim/systems/refuel/armed</property>
      </binding>
    </key>

    <key n="109">
     <name>m</name>
     <desc>engage nose wheel steering</desc>
     <binding>
      <command>property-assign</command>
      <property>fdm/jsbsim/systems/NWS/engaged</property>
      <value>1</value> 
     </binding>
     <mod-up>
       <binding>
        <command>property-assign</command>
        <property>fdm/jsbsim/systems/NWS/engaged</property>
        <value>0</value> 
       </binding>
     </mod-up>
    </key>

    <key n="110">
      <name>n</name>
      <desc>Toggle tailhook.</desc>
      <binding>
       <command>property-toggle</command>
       <property>fdm/jsbsim/systems/hook/tailhook-cmd-norm</property>
      </binding>
    </key>

    <key n="101">
     <name>e</name>
     <desc>Release selected store(s)</desc>
      <binding>
       <command>property-assign</command>
       <property>fdm/jsbsim/systems/armament/release</property>
       <value>1</value>
      </binding>
     <mod-up>
       <binding>
        <command>property-assign</command>
        <property>fdm/jsbsim/systems/armament/release</property>
        <value>0</value> 
       </binding>
     </mod-up>
    </key>

   </keyboard>
 </input>

