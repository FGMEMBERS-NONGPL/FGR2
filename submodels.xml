    <impact>false</impact>
  </submodel>

  <submodel>
    <name>jettison right fuel tank</name>
    <model>Aircraft/F-4D/Models/Stores/Tank_370/tank.ac</model>
    <trigger>fdm/jsbsim/systems/armament/station5/released</trigger>
    <trigger-once>true</trigger-once>
    <speed>0</speed>
