  <submodel>
    <name>gun-pod</name>
    <model>Aircraft/DavePack/Stores/guns/tracer.xml</model>
    <trigger>/controls/armament/trigger</trigger>
    <speed>2840.0</speed>
    <repeat>true</repeat>
    <delay>0.15</delay>
    <count>-1</count>
    <x-offset>  8.0</x-offset>
    <y-offset>  0.0</y-offset>
    <z-offset> -2.0</z-offset>
    <pitch-offset>-3.0</pitch-offset>
    <life>2.0</life>
    <wind>false</wind>
    <weight>0.1</weight>
    <cd>0.193</cd>
    <eda>0.00136354</eda> 
  </submodel>

  <submodel>
    <name>gun-bullet</name>
    <model>Models/Geometry/null.ac</model>
    <trigger>controls/armament/trigger</trigger>
    <speed>2840.0</speed>
    <repeat>true</repeat>
    <delay>0</delay>
    <count>-1</count>
    <x-offset>  9.0</x-offset>
    <y-offset>  0.0</y-offset>
    <z-offset> -2.0</z-offset>
    <pitch-offset>-3.0</pitch-offset>
    <life>10.0</life>
    <wind>false</wind>
    <weight>0.1069</weight>
    <cd>0.193</cd>
    <eda>0.00136354</eda> 
    <collision>true</collision>
    <collision-report>sim/ai/aircraft/collision/bullet</collision-report>
    <impact>true</impact>
    <impact-report>sim/ai/aircraft/impact/bullet</impact-report>
    <submodel-path>Aircraft/DavePack/Stores/guns/bullet-submodel.xml</submodel-path>
  </submodel>


  <submodel> 
    <name>gunsmoke</name>
    <model>Aircraft/DavePack/Stores/guns/smoke.xml</model>
    <trigger>controls/armament/trigger</trigger>
    <speed>10</speed>
    <repeat>true</repeat>
    <delay>0.01</delay>
    <count>-1</count>
    <x-offset> 10.0</x-offset>
    <y-offset>  0.0</y-offset>
    <z-offset> -2.0</z-offset>
    <yaw-offset>0.0</yaw-offset>
    <pitch-offset>0.0</pitch-offset>
    <eda>10</eda>
    <wind>true</wind>
    <buoyancy>33</buoyancy>
    <life>1</life>
  </submodel>

